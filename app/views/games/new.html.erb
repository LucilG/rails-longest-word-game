<header>
  <h1>Longest Word Game !</h1>
</header>

<div class="container">
  <div class="sub-container">
    <p>Here is your grid:</p>
    <ul>
      <% @letters.each do |letter| %>
        <li class="letter"><%= letter.upcase %></li>
      <% end %>
    </ul>
  </div>

  <div class="sub-container">
    <p>What is your longest word?</p>
    <form action="/score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters%>
      <input type="text" name="word" placeholder="your answer...">
      <input type="submit">
    </form>
  </div>
</div>
 